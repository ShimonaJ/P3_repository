<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"  android:layout_marginBottom="10dp"
    android:background="@drawable/list_item">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <TextView
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:gravity="left"
            android:text="@string/test_text"
            android:id="@+id/home_name"/>


        <LinearLayout
            android:layout_width="wrap_content" android:padding="1dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/home_crest"/>

            <FrameLayout android:layout_gravity="center" android:padding="5dp"
                android:layout_width="60dp" android:background="@color/accent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/test_text"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/score_textview"
                android:textIsSelectable="true" />

            </FrameLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/away_crest"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:gravity="left"
            android:text="@string/test_text"
            android:textSize="@dimen/TeamNames"
            android:id="@+id/away_name"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:paddingRight="10dp"
        android:text="@string/test_text"
        android:layout_gravity="bottom"
        android:gravity="right|center"
        android:id="@+id/data_textview"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_fragment_container">
    </FrameLayout>

</LinearLayout>


