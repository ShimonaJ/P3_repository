<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:layout_marginBottom="0dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:text="@string/test_text"
        android:layout_gravity="center"
        android:gravity="start|center"
        android:id="@+id/date_textview"
        />
        <TextView
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
android:textSize="@dimen/TeamNames"
            android:gravity="right|center"
            android:text="@string/test_text"
            android:id="@+id/home_name"/>

    <ImageView android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/home_crest"/>

            <FrameLayout android:layout_gravity="center" android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="@string/test_text"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/score_textview"
                 />

            </FrameLayout>

    <ImageView android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/away_crest"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:gravity="left"
            android:text="@string/test_text"
            android:textSize="@dimen/TeamNames"
            android:id="@+id/away_name"/>






</LinearLayout>


